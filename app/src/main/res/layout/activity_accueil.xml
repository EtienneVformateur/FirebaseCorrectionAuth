<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AccueilActivity">

    <TextView
        android:id="@+id/TVVerifmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez vérifier votre adresse mail"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F44336" />

    <Button
        android:id="@+id/btQuizz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="demarreQuizz"
        android:text="Démarrer le quizz" />

    <Button
        android:id="@+id/BTVerifMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="Envoyer mail de vérification" />

    <Button
        android:id="@+id/btProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile" />

    <Button
        android:id="@+id/BTDeconnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="Déconnexion" />

    <TextView
        android:id="@+id/TVEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</LinearLayout>